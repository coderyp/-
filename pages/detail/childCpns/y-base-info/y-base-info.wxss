/* ./childCpns/y-base-info/y-base-info.wxss */
.base-info {
  margin-top: 16rpx;
  padding: 20rpx;
  border-bottom: 12rpx solid rgba(0,0,0,.1);

}
.price-info {
  margin-top: 8rpx;
}

.base-info .price {
  color: #ff5777;
  margin-left: 10rpx;
}
.base-info .old-price {
  text-decoration: line-through;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.base-info .title {
  font-size: 32rpx;
}

.price-info .discount {
  background-color: #ff5777;
  color: #fff;
  margin-left: 16rpx;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  position: relative;
  bottom: 8rpx;
}

.base-info .sell-info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #aaa;
  padding-bottom: 16rpx;
  font-size: 28rpx;
}

.base-info .service {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.service-item .icon {
  width: 26rpx;
  height: 26rpx;
  position: relative;
  top: 4rpx;
  margin-right: 5rpx;
}