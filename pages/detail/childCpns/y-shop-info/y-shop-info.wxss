/* pages/detail/childCpns/y-shop-info/y-shop-info.wxss */
.shop-info {
  padding: 6rpx 16rpx 50rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.title-info {
  margin-top: 30rpx;
}

.shop-info .shop-logo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1px solid rgba(200,200,200,.6);
  vertical-align: middle;

}
.shop-name {
  margin-left: 20rpx;
  position: relative;
  top: 6rpx;
}
.sell-info {
  display: flex;
  justify-content: space-evenly;
  margin: 40rpx 0;
}

.sell-item {
  flex: 1;
  text-align: center;
}

.count-info {
  display: flex;
  margin: 20rpx 0;
  border-right: 1px solid rgba(200,200,200,.6);
}

.count-item {
  flex: 1;
  text-align: center;
}

.count-item .count {
  font-size: 40rpx;
}

.count-item .text {
  font-size: 28rpx;
  margin-top: 16rpx;
}
/* 评分 */
.grade-info {
  font-size: 28rpx;
  padding: 0 20rpx;
}

.grade-row {
  display: flex;
}

.grade-row .item {
  margin-top: 8rpx;
}

.grade-row .name {
  width: 200rpx;
}

.grade-row .score {
  flex: 1;
}

.grade-row .better {
  flex: 1;
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}
