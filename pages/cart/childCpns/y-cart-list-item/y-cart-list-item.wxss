/* pages/cart/childCpns/y-cart-list-item/y-cart-list-item.wxss */
#shop-item {
    display: flex;
    justify-content: space-between;
    width: 100%;
    border-bottom: 1rpx solid #aaa;
    padding: 16rpx 12rpx;
    font-size: 32rpx;
    box-sizing: border-box;
  }
  .select {
    width: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .item-img image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
  }
  .item-info {
    width: 474rpx;
    padding: 0 20rpx;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
  }
  .item-title, .item-desc {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }
  .item-title {
    color: #000;
    font-size: 36rpx;
  }
  .item-desc {
    margin: 30rpx 0;
  }  
  .info-bottom {
    display: flex;
    justify-content: space-between;
  }
  .info-bottom .price {
    color: #f00;
  }  
  .info-bottom .count {
    color: #000;
    font-size: 40rpx;
  }